<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ramattecgmail.rafah.herdeirosapp.Activitys.MainActivity"
    android:background="@color/primaryLightColor">

    <android.support.v7.widget.CardView
        android:id="@+id/card_retiro"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradiente_main_cards">

            <TextView
                android:id="@+id/tv_retiro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Retiro 2017"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                android:textSize="39sp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                android:elevation="8dp"/>

        </FrameLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_mocidade"
        android:layout_width="0dp"
        android:layout_height="120dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/card_retiro"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradiente_main_cards">

            <TextView
                android:id="@+id/tv_mocidade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RepertÃ³rio"
                android:textColor="@color/primaryColor"
                android:textStyle="bold"
                android:textSize="39sp"
                android:layout_marginRight="2dp"
                android:layout_gravity="center"
                android:elevation="8dp" />

        </FrameLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_calendario"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@+id/card_mocidade"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradiente_main_cards">

            <TextView
                android:id="@+id/tv_calendario"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Eventos"
                android:textColor="@color/primaryLightColor"
                android:textStyle="bold"
                android:textSize="31sp"
                android:layout_gravity="center"
                android:elevation="8dp" />

        </FrameLayout>


    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_galeria"
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/card_mocidade"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradiente_main_cards">

            <TextView
                android:id="@+id/tv_galeria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galeria"
                android:textColor="@color/primaryLightColor"
                android:textStyle="bold"
                android:textSize="31sp"
                android:layout_gravity="center"
                android:elevation="8dp"/>

        </FrameLayout>



    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>
